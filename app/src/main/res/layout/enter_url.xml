<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/dark_gray"
    app:contentPadding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="URL of the image"
            android:textColorHint="@color/gray"
            app:boxStrokeColor="@color/system_blue"
            app:hintTextColor="@color/system_blue"
            app:boxBackgroundColor="@color/medium_gray"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tielInputUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/pure_white"
                android:textSize="14sp"
                android:inputType="textUri"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbtClose"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:layout_margin="16dp"
            app:iconPadding="0dp"
            app:iconGravity="textStart"
            app:icon="@drawable/ic_close"
            app:iconTint="@color/pure_white"
            app:backgroundTint="@color/system_red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btMenu"
            app:cornerRadius="12dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbtAccept"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:iconPadding="0dp"
            app:iconGravity="textStart"
            app:icon="@drawable/ic_check"
            app:iconTint="@color/pure_white"
            app:backgroundTint="@color/system_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btMenu"
            app:cornerRadius="12dp"
            />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>